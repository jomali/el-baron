			'bota' 'camisa' 'camiseta' 'camisola' 'indumentaria' 'prenda' 'ropa' 
			'vestimenta',
		name_fp 'botas' 'prendas' 'vestimentas',
		name_m 'calzado' 'pantalon' 'tejano' 'vaquero' 'vestuario',
		name_mp 'atavios' 'atuendos' 'pantalones' 'tejanos' 'vaqueros',
		gender G_FEMENINO,
		adjectives
			'cadros' 'cuero' 'diario' 'duro' 'duros' 'lana' 'lenador' 'recio' 
			'recios' 'reforzada' 'reforzadas' 'reforzado' 'trabajo',
		article "tu",
		parse_name [
			word;
			self.boots_flag = false;
			self.shirt_flag = false;
			self.trousers_flag = false;
			word = NextWord();
			if (word == 'bota' or 'botas' or 'calzado') {
				self.boots_flag = true;
			} else if (word == 'camisa' or 'camiseta' or 'camisola') {
				self.shirt_flag = true;
			} else if (word == 'pantalon' or 'tejano' or 'vaquero' or 'pantalones' or
				'tejanos' or 'vaqueros') {
				self.trousers_flag = true;
			}
			wn--;
			return -1;
		],
		!!
		after [
			wear_it;
			Take:
				if (self.previous_parent ~= nothing) {
					wear_it = false;
					return self.when_taken(wear_it);
				}
				return false;
			Wear:
				self.previous_parent = nothing;
				if (real_location == DormitorioBaron) {
					print "Te vistes en silencio.";
					new_line;
					return true;
				}
			default:
				self.previous_parent = nothing;
				return false;
		],
		before [
			temp wear_it;
			DefaultAction:
				if (self hasnt worn) {
					<<GetDressed self>>;
				} else {
					<<Examine self>>;
				}
			GetDressed:
				temp = parent(self);
				if (temp ~= player
					! && TestScope(self, player) ! (redundante)
					&& (temp == parent(player) || temp has supporter)) {
					self.previous_parent = temp;
					move self to player;
					give self worn;
					wear_it = true;
					return self.when_taken(wear_it);
				}
			Take:
				self.previous_parent = parent(self);
				return false;
			Smell:
				print "Desprende un ligero olor a sudor —fruto del trabajo duro y honesto—.";
				if (~~self.tried_to_smell) {
					self.tried_to_smell = true;
					print " Lo cuál siempre ha tenido un punto erótico de acuerdo con [if:TestScope(Matilde, player)][Matilde][else]Matilde[fi].";
				}
				new_line;
				return true;
		],
		description [;
			if (self.boots_flag) {
				print "Un par de botas de cuero con refuerzo de acero en la puntera.";
			} else if (self.shirt_flag) {
				print "Una camisa de lana a cuadros rojos y azules. Tejida y teñida a mano por [if:TestScope(Matilde, player)][Matilde][else]Matilde[fi].";
			} else if (self.trousers_flag) {
				print "Unos viejos vaqueros azules. Cómodos y resistentes; perfectos para el trabajo de un leñador.";
			} else {
				if (real_location == DormitorioBaron) {
					print "Es la misma ropa";
				} else {
					print "La ropa";
				}
				print " que llevabas ayer cuando saliste a talar madera al bosque: una [self](camisa) de cuadros rojos y azules, [self](pantalones) vaqueros y dos recias [self](botas) de cuero.";
			}
			new_line;
			return true;
		],
		layer 1,
 private
		boots_flag false,
		shirt_flag false,
		trousers_flag false,
		tried_to_smell false,
		!! Atributo temporal que se establece y es borrado a lo largo de un
		!! mismo turno para conocer al antecesor del objeto:
		previous_parent 0,
		when_taken [ wear_it;
			!! ECTOCOMP 2024. Implementación más sencilla para asegurar la correcta
			!! visibilidad de la silla:
			DormitorioBaronSilla.check_visibility();
			print "Recoges [el self]";
			!! Considera dónde estaba colocado el objeto:
			if (self.previous_parent has container) {
				print " de dentro [del self.previous_parent]";
			} else if (self.previous_parent has supporter) {
				print " de encima [del self.previous_parent]";
			}
			!! Apéndice si el PC además se viste con el objeto:
			if (wear_it) {
				if (location == DormitorioBaron) {
					print " y te vistes en silencio. Estremeciéndote al pensar en la gélida noche que te aguarda [out_obj](afuera)";
				} else {
					print " y te l[o self] pones";
				}
			}
			!! Final:
			print ".";
			new_line;
