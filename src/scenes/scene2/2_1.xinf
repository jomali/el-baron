!! @Matilde
Character	-> -> Matilde "Matilde"
	has
		female proper,
	with
		name_f 'conyuge' 'esposa' 'matilde' 'mujer' 'persona',
		gender G_FEMENINO,
		!!
		is_lying false,
		!!
		before [;
			Attack:
				if (~~self.tried_to_attack) {
					self.tried_to_attack = true;
					if (IndirectlyContains(player, Hacha)) {
						print "Agarras el mango [del Hacha] con fuerza";
					} else {
						print "Cierras los puños con fuerza";
					}
					print " en un arrebato de furia.
					^^
					*¡Sería para toda la eternidad!*
					^^
					Las palabras se forman repentinamente en tu mente, sin saber qué significan en realidad… pero se esfuman con la misma rapidez, dejándote inquieto y confundido. La sola idea de poder hacer daño a [Matilde] te aterra. ";
				}
				print "Nunca pondrías una mano encima a tu [Matilde](mujer).";
				new_line;
				return true;
			DefaultAction:
				<<Examine self>>;
			Kiss:
				if (~~self.is_lying) {
					print "Te inclinas con delicadeza sobre [la DormitorioBaronCama] para besar la frente de [self]. Su aliento se entrecorta por un momento y percibes cómo se tensan los músculos de su mandíbula.";
					return self.unmask();
				} else if (~~self.tried_to_kiss) {
					self.tried_to_kiss = true;
					print "Tus labios rozan con ternura la pálida mejilla en un sencillo gesto de despedida. Parece estremecerse ante el contacto y entierra disimuladamente el rostro en la almohada.";
					new_line;
					return true;
				} else {
					print "Sea o no fingido decides no molestar más su sueño.";
					new_line;
					return true;
				}
			Listen:
				if (~~self.is_lying) {
					print "La noche encierra peligros; tanto figurados como muy literales también, algunos. Pero en contraposición el sonido rítmico de la respiración de [self] resulta tranquilizador y reconfortante… sólo que ahora hay algo extraño en esa respiración. Te inclinas con delicadeza junto a ella y por un momento percibes cómo se tensan los músculos de su mandíbula.";
					return self.unmask();
				} else {
					print "La superficial respiración de [self] delata que está despierta en realidad.";
					new_line;
					return true;
				}
			Pull,
			Push,
			PushDir,
			Squeeze,
			Take,
			TalkTo,
			WakeOther:
				if (~~self.is_lying) {
					!! ...ir a salvar a María de las garras del barón estos últimos días, ella.."
					print "No, no quieres despertarla.";
					if (self.tried_to_talk < 1) {
						self.tried_to_talk = 1;
						print " [self] se opone frontalmente a que pongas en peligro tu vida para intentar liberar a vuestra hija. Cada vez que has mencionado la intención de ir a salvar a María estos últimos días, ella ha exclamado angustiada que no podía soportar la idea de perderte también a ti.
						^^
						Lo mejor es irse en silencio y dejarla dormir.";
					}
				} else {
					print "Mejor no romper la farsa.";
					if (self.tried_to_talk < 2) {
						self.tried_to_talk = 2;
						print " Será más fácil para ella aceptar lo que estás a punto de hacer si no tiene que enfrentarse a ello explícitamente.
						^^
						Y tampoco tú crees tener fuerzas suficientes para oponerte a ella si te ruega que te quedes en casa.";
					}
				}
				new_line;
				return true;
			Smell:
				if (~~self.is_lying) {
					print "Te inclinas con delicadeza sobre [la DormitorioBaronCama] para oler el pelo de [self]. Su aliento se entrecorta por un momento y percibes cómo se tensan los músculos de su mandíbula.";
					return self.unmask();
				} else {
					print "Reconocerías su olor entre miles; cálido y confortable.";
					new_line;
					return true;
				}
			Touch:
				if (~~self.is_lying) {
					print "Te inclinas con delicadeza sobre [la DormitorioBaronCama] para acariciar a [self]. Su aliento se entrecorta por un momento y percibes cómo se tensan los músculos de su mandíbula.";
					return self.unmask();
				} else if (~~self.tried_to_touch) {
					self.tried_to_touch = true;
					print "Acarias su mejilla y por un momento dejas que tus dedos jugueteen delicadamente entre sus cabellos rubios, mientras ella finge seguir durmiendo.";
					new_line;
					return true;
				} else {
					print "Es hora de marcharte.";
					new_line;
					return true;
				}
		],
		description [;
			if (~~self.is_lying) {
				print "Duerme profundamente, echa un ovillo bajo la gruesa [DormitorioBaronManta](manta).";
			} else {
				print "Se esfuerza por intentar controlar la respiración mantener su rostro relajado, pero sus esfuerzos no bastan para ocultar el engaño. Está despierta y sabe a dónde te diriges.";
			}
			new_line;
			return true;
		],
 private
		tried_to_attack false,
		tried_to_kiss false,
		tried_to_talk 0,
		tried_to_touch false,
		!!
		unmask [;
			give LogroInquisidor on;
			self.is_lying = true;
			print " ¡Está despierta!
			^^Finge dormir, pero está despierta… está claro que sabe a dónde te diriges. ¿Es acaso una forma de aprobación silenciosa que nunca sería capaz de expresar con palabras? ¿O simplemente que está demasiado asustada como para enfrentarse a ti?";
			new_line;
			return true;
		],
;

